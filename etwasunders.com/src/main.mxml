<?xml version="1.0" encoding="utf-8"?>
<mx:Application
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:controls="com.etwasunders.controls.*"
	layout="absolute"
	horizontalScrollPolicy="off"
	verticalScrollPolicy="off" viewSourceURL="srcview/index.html">
	<mx:Style 
		source="../resources/main.css" />
	<mx:Image 
		source="../images/bg.jpg" />
	<mx:Box
		width="100%"
		height="100%"
		horizontalAlign="center"
		verticalAlign="middle">
		<mx:VBox 
			width="80%"
			height="80%"
			minWidth="770"
			minHeight="500"
			verticalGap="0">
			<mx:Image 
				id="logoImage"
				source="../images/logo.png"
				width="324"
				height="93" />
			<mx:Spacer 
				height="15%" />
			<mx:VBox
				width="100%"
				height="85%"
				verticalAlign="middle">
		   		<controls:Content
		   			logoImage="{logoImage}" />
			</mx:VBox>
		</mx:VBox>
	</mx:Box>
</mx:Application>